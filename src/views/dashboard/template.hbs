{{!-- src/views/dashboard/template.hbs --}}
<div class="dashboard-container">
    <!-- Header minimalista -->
    <header class="dashboard-header">
        <div class="header-content">
            <h1 class="header-greeting">Bienvenido</h1>
            <button id="logoutBtn" class="btn-logout" aria-label="Cerrar sesión">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"></path>
                    <polyline points="16 17 21 12 16 7"></polyline>
                    <line x1="21" y1="12" x2="9" y2="12"></line>
                </svg>
            </button>
        </div>
    </header>

    <!-- Main Actions -->
    <main class="dashboard-main">
        <section class="actions-section">
            <!-- Registro con INE (Grande) -->
            <button class="action-card scan-card large" id="scanCard">
                <div class="card-background"></div>
                <div class="card-content">
                    <div class="card-icon">
                        <lord-icon src="https://cdn.lordicon.com/hbvyhtse.json" trigger="loop" delay="2000" colors="primary:#ffffff"
                            style="width:80px;height:80px">
                        </lord-icon>
                    </div>
                    <h3>Registro con INE</h3>
                    <p>Escanea y registra</p>
                </div>
            </button>
            
            <!-- Grid secundario -->
            <div class="actions-grid-secondary">
                <button class="action-card enroll-card" id="enrollCard">
                    <div class="card-background"></div>
                    <div class="card-content">
                        <div class="card-icon">
                            <lord-icon src="https://cdn.lordicon.com/zfzufhzk.json" trigger="loop" delay="2000"
                                colors="primary:#ffffff" style="width:60px;height:60px">
                            </lord-icon>
                        </div>
                        <h3>Enrolamiento</h3>
                        <p>Registro manual</p>
                    </div>
                </button>
            
                <button class="action-card gestion-card" id="altaGestionCard">
                    <div class="card-background"></div>
                    <div class="card-content">
                        <div class="card-icon">
                            <lord-icon src="https://cdn.lordicon.com/ftndcppj.json" trigger="loop" delay="2000"
                                colors="primary:#ffffff" style="width:60px;height:60px">
                            </lord-icon>
                        </div>
                        <h3>Nueva Gestión</h3>
                        <p>Crear solicitud</p>
                    </div>
                </button>
            </div>

        </section>

        <!-- Footer -->
        <footer class="dashboard-footer">
            <img src="{{imgHeader}}" alt="Structech" class="footer-logo" />
            <span class="footer-text">Structech © 2025</span>
        </footer>
    </main>
</div>