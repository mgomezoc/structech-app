{{!-- src/views/dashboard/template.hbs --}}
<div class="dashboard-container">
    <!-- Header simplificado -->
    <header class="dashboard-header">
        <div class="header-content">
            <div class="header-left">
                <h1 class="header-greeting">Bienvenido</h1>
                <span class="header-subtitle">Tu panel de control</span>
            </div>
            <div class="header-right">
                <button id="logoutBtn" class="btn-logout" aria-label="Cerrar sesión">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"></path>
                        <polyline points="16 17 21 12 16 7"></polyline>
                        <line x1="21" y1="12" x2="9" y2="12"></line>
                    </svg>
                </button>
            </div>
        </div>
    </header>

    <!-- Main Actions -->
    <main class="dashboard-main">
        <section class="actions-section">
            <!-- Registro con INE (Grande) -->
            <button class="action-card scan-card large" id="scanCard">
                <div class="card-background"></div>
                <div class="card-overlay"></div>
                <div class="card-content">
                    <div class="card-icon">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M3 7V5a2 2 0 0 1 2-2h2"></path>
                            <path d="M17 3h2a2 2 0 0 1 2 2v2"></path>
                            <path d="M21 17v2a2 2 0 0 1-2 2h-2"></path>
                            <path d="M7 21H5a2 2 0 0 1-2-2v-2"></path>
                        </svg>
                    </div>
                    <h3>Registro con INE</h3>
                    <p>Escanea y registra automáticamente</p>
                </div>
            </button>

            <!-- Grid secundario -->
            <div class="actions-grid-secondary">
                <button class="action-card enroll-card" id="enrollCard">
                    <div class="card-background"></div>
                    <div class="card-overlay"></div>
                    <div class="card-content">
                        <div class="card-icon">
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M16 4h2a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2H6a2 2 0 0 1-2-2V6a2 2 0 0 1 2-2h2">
                                </path>
                                <rect x="8" y="2" width="8" height="4" rx="1" ry="1"></rect>
                            </svg>
                        </div>
                        <h3>Enrolamiento</h3>
                        <p>Registro manual</p>
                    </div>
                </button>

                <button class="action-card gestion-card" id="altaGestionCard">
                    <div class="card-background"></div>
                    <div class="card-overlay"></div>
                    <div class="card-content">
                        <div class="card-icon">
                            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <circle cx="12" cy="12" r="10"></circle>
                                <line x1="12" y1="8" x2="12" y2="16"></line>
                                <line x1="8" y1="12" x2="16" y2="12"></line>
                            </svg>
                        </div>
                        <h3>Nueva Gestión</h3>
                        <p>Crear solicitud</p>
                    </div>
                </button>
            </div>
        </section>

        <!-- Footer -->
        <footer class="dashboard-footer">
            <img src="{{imgHeader}}" alt="Structech" class="footer-logo" />
            <span class="footer-text">Structech © 2025</span>
        </footer>
    </main>
</div>