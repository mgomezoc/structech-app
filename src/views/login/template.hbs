{{!-- src/views/login/template.hbs --}}
<div class="login-page">
    <!-- Fondo animado con CSS puro -->
    <div class="animated-bg">
        <!-- Gradientes animados -->
        <div class="gradient-orb orb-1"></div>
        <div class="gradient-orb orb-2"></div>
        <div class="gradient-orb orb-3"></div>

        <!-- Partículas flotantes -->
        <div class="floating-particles">
            <div class="particle particle-1"></div>
            <div class="particle particle-2"></div>
            <div class="particle particle-3"></div>
            <div class="particle particle-4"></div>
            <div class="particle particle-5"></div>
            <div class="particle particle-6"></div>
        </div>

        <!-- Overlay sutil -->
        <div class="bg-overlay"></div>
    </div>

    <div class="login-container">
        <!-- Logo con animación de entrada -->
        <div class="logo-container">
            <img src="{{logoUrl}}" alt="StructTech" class="logo" />
            <div class="logo-glow"></div>
        </div>

        <div class="welcome-text">
            <h2>¡Bienvenido de nuevo!</h2>
            <p class="subtitle">Inicia sesión en tu cuenta</p>
        </div>

        <form id="loginForm" class="login-form">
            {{!-- Usuario --}}
            <div class="input-group">
                <div class="input-icon">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
                        <polyline points="22,6 12,13 2,6"></polyline>
                    </svg>
                </div>
                <input type="text" id="email" name="email" placeholder="Usuario" autocomplete="username" />
                <div class="validation-message" id="emailValidation"></div>
            </div>

            {{!-- Contraseña --}}
            <div class="input-group">
                <div class="input-icon">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
                        <circle cx="12" cy="16" r="1"></circle>
                        <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
                    </svg>
                </div>
                <input type="password" id="password" name="password" placeholder="Contraseña"
                    autocomplete="current-password" />

                {{!-- Toggle mostrar/ocultar --}}
                <button type="button" id="togglePassword" class="toggle-password">
                    <svg id="toggleIcon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor"
                        stroke-width="2">
                        <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                        <circle cx="12" cy="12" r="3"></circle>
                    </svg>
                </button>
                <div class="validation-message" id="passwordValidation"></div>
            </div>

            {{!-- Opciones recordarme --}}
            <div class="form-options">
                <label class="checkbox-wrapper">
                    <input type="checkbox" id="remember" name="remember" />
                    <span class="checkmark"></span>
                    Recordarme
                </label>
                <!--
                <a href="#/forgot-password" class="forgot-link">¿Olvidaste tu contraseña?</a>
                -->
            </div>

            {{!-- Botón principal --}}
            <button type="submit" class="btn-primary" id="submitBtn">
                <span id="btnText">Iniciar Sesión</span>
                <span id="btnLoader" class="btn-loader">
                    <div class="spinner"></div>
                    <span>Iniciando...</span>
                </span>
                <div class="btn-ripple"></div>
            </button>

            {{!-- Divider condicional --}}
            <div class="login-divider" id="loginDivider">
                <span>o continúa con</span>
            </div>

            {{!-- Botón biométrico --}}
            <button type="button" class="btn-secondary" id="biometricBtn">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M12 1v6M12 17v6"></path>
                    <circle cx="12" cy="12" r="4"></circle>
                    <path d="M8 12c0-1.5.5-3 1.5-4"></path>
                    <path d="M16 12c0 1.5-.5 3-1.5 4"></path>
                    <path d="M9.5 8c1-.5 2.5-.5 3.5 0"></path>
                    <path d="M14.5 16c-1 .5-2.5.5-3.5 0"></path>
                </svg>
                <span>Iniciar con huella</span>
                <div class="btn-glow"></div>
            </button>

            {{!-- Mensaje de error --}}
            <div id="errorMessage" class="error-message">
                <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="12" cy="12" r="10"></circle>
                    <line x1="15" y1="9" x2="9" y2="15"></line>
                    <line x1="9" y1="9" x2="15" y2="15"></line>
                </svg>
                <span class="error-text"></span>
            </div>
        </form>
    </div>

    <!-- Loader inicial optimizado -->
    <div id="pageLoader" class="page-loader">
        <div class="loader-content">
            <div class="pulse-loader">
                <div class="pulse-dot pulse-dot-1"></div>
                <div class="pulse-dot pulse-dot-2"></div>
                <div class="pulse-dot pulse-dot-3"></div>
            </div>
            <p>Cargando...</p>
        </div>
    </div>
</div>