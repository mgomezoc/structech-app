{{!-- src/views/survey-detail/template.hbs --}}
{{!-- ✅ ESTA ES LA VERSIÓN CORRECTA Y RECOMENDADA --}}

<div class="survey-detail-container survey-view-container"> {{!-- Opcional pero recomendado
    para CSS --}}

    <header class="survey-detail-header survey-header">
        <button class="back-button" id="backBtn" aria-label="Regresar a encuestas" title="Volver">
            {{{backIcon}}}
        </button>
        <div class="header-content" id="surveyHeaderContent">
            {{#if loading}}
            <div class="header-skeleton">
                <div class="skeleton-title"></div>
                <div class="skeleton-subtitle"></div>
                <div class="skeleton-meta"></div>
            </div>
            {{/if}}
        </div>
    </header>

    {{#if loading}}
    <div class="survey-loading loading-container" id="surveyLoading">
        <div class="loading-content">
            <div class="loading-spinner"></div>
            <h3 class="loading-title">Cargando encuesta</h3>
            <p class="loading-text">Preparando las preguntas...</p>
        </div>
    </div>
    {{/if}}

    <div class="survey-error error-container" id="surveyError" style="display: none;"></div>

    <div class="survey-content" id="surveyContent" {{#if loading}}style="display: none;" {{/if}}>
        {{!-- Esencial para el scroll automático --}}

        <main class="question-section">
            <div class="question-container" id="questionContainer">
            </div>
        </main>

        <nav class="survey-navigation question-navigation">
            <div class="nav-buttons">
                <button class="nav-btn prev-btn" id="prevBtn" style="display: none;" disabled>
                    {{{prevIcon}}}
                    <span>Anterior</span>
                </button>
                <button class="nav-btn next-btn" id="nextBtn">
                    <span>Siguiente</span>
                    {{{nextIcon}}}
                </button>
                <button class="nav-btn submit-btn" id="submitBtn" style="display: none;">
                    {{{submitIcon}}}
                    <span>Finalizar</span>
                </button>
            </div>
        </nav>
    </div>

    <div class="survey-progress" id="surveyProgress">
        <div class="progress-track">
            <div class="progress-fill" id="progressFill" style="width: 0%"></div>
        </div>
    </div>
</div>